@{
    Layout = "~/views/Shared/_layout.cshtml";
    Page.Title = (Model.ContractGuid == Guid.Empty ? "新增合同" : "编辑合同");
}
@section header {
    <script>
        window._contractGuid = '@Model.ContractGuid';
        window._templateGuid = '@Model.TemplateGuid';
    </script>
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">合同条款审核情况</h3>
        <span class="float-right glyphicon glyphicon-refresh" id="btn-refresh"></span>
    </div>
    <div class="panel-body">
        <ul class="list-group" id="term-list"></ul>
    </div>
</div>

<link href="~/static/Contract/edit.css" rel="stylesheet" type="text/css" />
<script src="~/static/Contract/edit.js" type="text/javascript"></script>

@section footer{
    <div class="btn-group" role="group" aria-label="...">
        <button type="button" class="btn btn-default glyphicon glyphicon-chevron-left" id="btn-return">返回</button>
        <button type="button" class="btn btn-default glyphicon glyphicon-floppy-disk" id="btn-save">保存合同</button>
    </div>
}